@model IEnumerable<Gym.Models.Trainer>
@{
    ViewData["Title"] = "Trainers";
}

<h1>Trainers</h1>

<form asp-action="Index" method="get">
    <input type="text" name="searchString" placeholder="Search by name" />
    <button type="submit">Search</button>
</form>

<p>
    <a asp-action="Create">Add New Trainer</a>
</p>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Assigned Members</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var trainer in Model)
{
    <tr>
        <td>@trainer.Name</td>
        <td>@(trainer.Members?.Count ?? 0)</td>
        <td>
            <a asp-action="Details" asp-route-id="@trainer.Id">Details</a> |
            <a asp-action="Edit" asp-route-id="@trainer.Id">Edit</a> |
            <a asp-action="Delete" asp-route-id="@trainer.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
